default_platform(:android)

platform :android do
  desc "Deploy a new beta to Google Play"
  lane :beta do
    upload_to_play_store(
      track: 'beta',
      apk: '../build/app/outputs/apk/release/app-release.apk',
      skip_upload_screenshots: true,
      skip_upload_images: true
    )
  end
end
